# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = false

[*.erl]
indent_style = space
indent_size = 4

[*.hrl]
indent_style = space
indent_size = 4

[*.html]
indent_style = tab

[external/**]
trim_trailing_whitespace = false
insert_final_newline = varies
end_of_line = varies
